@page
@model UpsertModel
@{
    ViewData["Title"] = Model.FoodType.Id != 0 ? "Edit Food Type" : "Create Food Type";
}

<form method="post" asp-action="Upsert">
    <div class="container">
        <div class="row px-2 mx-2 backgroundWhite border">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            @if (Model.FoodType.Id != 0)
            {
                <input type="hidden" asp-for="FoodType.Id" />
            }

            <div class="col-12 px-3" style="border-bottom: 1px solid #325d88">
                <h2 class="text-primary">@(Model.FoodType.Id != 0 ? "Update" : "Create") Category</h2>
            </div>
            <div class="col-8 pt-3">
                <div class="form-group row">
                    <div class="col-3">
                        <label asp-for="FoodType.Name"></label>
                    </div>
                    <div class="col-9">
                        <input asp-for="FoodType.Name" class="form-control" />
                        <span class="text-danger" asp-validation-for="FoodType.Name"></span>
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-9 offset-3">
                        <div class="row">
                            <div class="col-6">
                                <a asp-page="./Index" class="btn btn-success form-control">Back to list</a>
                            </div>
                            <div class="col-6">
                                <button type="submit" class="btn btn-primary form-control">@(Model.FoodType.Id != 0 ? "Update" : "Create")</button>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</form>
