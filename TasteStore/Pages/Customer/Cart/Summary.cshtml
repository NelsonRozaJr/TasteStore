@page
@model SummaryModel
@{
    ViewData["Title"] = "Summary";
}

<form method="post">
    <div class="backgroundWhiteBorder">
        <div class="container">
            @{
                bool hasItems = Model.DetailCart.ShoppingCartItems.Count > 0;
            }

            <div class="card">
                <div class="card-header bg-light ml-0 row container">
                    <div class="col-6 pt-2">
                        <i class="fa fa-shopping-cart"></i> &nbsp;
                        Order Summary
                    </div>
                    <div class="col-6 text-right">
                        <a asp-page="Index" class="btn btn-info pt-2 btn-sm">Back to Cart</a>
                    </div>
                </div>
                <div class="card-body">

                    @if (hasItems)
                    {
                        <input type="hidden" asp-for="@Model.DetailCart.ShoppingCartItems[0].ApplicationUserId" />

                        <div class="container rounded p-2">
                            <div class="row">
                                <div class="col-12 col-lg-6 pb-4">
                                    <div class="row ml-2">
                                        <h4 class="d-flex justify-content-between align-items-center mb-3">
                                            <span class="text-info">Pick up details</span>
                                        </h4>
                                    </div>
                                    <div class="form-group row ml-2">
                                        <div class="col-2">
                                            <label class="col-form-label">Name</label>
                                        </div>
                                        <div class="col-10">
                                            <input id="txtName" asp-for="@Model.DetailCart.OrderHeader.PickupName" type="text" class="form-control" />
                                        </div>
                                    </div>
                                    <div class="form-group row ml-2">
                                        <div class="col-2">
                                            <label class="col-form-label">Phone</label>
                                        </div>
                                        <div class="col-10">
                                            <input id="txtPhone" asp-for="@Model.DetailCart.OrderHeader.PhoneNumber" type="text" class="form-control" />
                                        </div>
                                    </div>
                                    <div class="form-group row ml-2">
                                        <div class="col-2">
                                            <label class="col-form-label">Date</label>
                                        </div>
                                        <div class="col-10">
                                            <input id="datepicker" asp-for="@Model.DetailCart.OrderHeader.PickupDate" type="date" class="form-control" />
                                        </div>
                                    </div>
                                    <div class="form-group row ml-2">
                                        <div class="col-2">
                                            <label class="col-form-label">Time</label>
                                        </div>
                                        <div class="col-10">
                                            <input id="timepicker" asp-for="@Model.DetailCart.OrderHeader.PickupTime" type="time" class="form-control" />
                                        </div>
                                    </div>
                                    <div class="form-group row ml-2">
                                        <div class="col-2">
                                            <label class="col-form-label">Additional instructions</label>
                                        </div>
                                        <div class="col-10">
                                            <textarea asp-for="@Model.DetailCart.OrderHeader.Comments" class="form-control" style="height:100px;"></textarea>
                                        </div>
                                    </div>
                                </div>

                                <div class="col-12 col-lg-5 offset-lg-1">
                                    <h4 class="d-flex justify-content-between align-items-center mb-3">
                                        <span class="text-info">Order Summary</span>
                                    </h4>
                                    <ul class="list-group mb-3">

                                        @foreach (var item in Model.DetailCart.ShoppingCartItems)
                                        {
                                            <li class="list-group-item d-flex justify-content-between">
                                                <div>
                                                    <h6 class="my-0">@item.MenuItem.Name</h6>
                                                    <small class="text-muted">Quantity: @item.Quantity</small>
                                                </div>
                                                <span class="text-muted">$@(item.MenuItem.Price * @item.Quantity)</span>
                                            </li>
                                        }

                                        <li class="list-group-item d-flex justify-content-between bg-light">
                                            <small class="text-info">Total (USD)</small>
                                            <strong class="text-info">$@Model.DetailCart.OrderHeader.OrderTotal</strong>
                                        </li>
                                    </ul>
                                </div>
                            </div>
                        </div>
                    }
                    </div>
                <div class="card-footer">
                    <div class="row">
                        <div class="col-12 col-md-4 offset-md-8">
                            <button type="submit" value="Place Order" class="btn btn-success form-control">Place Order</button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</form>
