@page
@model ExternalLoginModel
@{
    ViewData["Title"] = "Register";
}

<div class="py-4 my-4">
    <div class="row form-group">
        <div class="col-8 offset-2">
            <div class="card">
                <div class="card-body px-lg-5 pt-4">
                    <h3 class="col-12 text-success text-center">
                        <strong>Register</strong>
                    </h3>

                    <hr />

                    <h4 id="external-login-title" class="text-center">Associate your @Model.ProviderDisplayName account</h4>

                    <p id="external-login-description" class="text-info">
                        You've successfully authenticated with <strong>@Model.ProviderDisplayName</strong>.
                        Please enter all inforrmation for this site below and click the Register button to finish logging in.
                    </p>

                    <hr />

                    <div class="row">
                        <div class="col-md-12">
                            <form asp-page-handler="Confirmation" asp-route-returnUrl="@Model.ReturnUrl" method="post">
                                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                                <div class="form-row py-2">
                                    <div class="col">
                                        <div>
                                            <input type="text" asp-for="Input.FirstName" autocomplete="off" placeholder="First Name" class="form-control" />
                                            <span asp-validation-for="Input.FirstName" class="text-danger"></span>
                                        </div>
                                    </div>
                                    <div class="col">
                                        <div>
                                            <input type="text" asp-for="Input.LastName" autocomplete="off" placeholder="Last Name" class="form-control" />
                                            <span asp-validation-for="Input.LastName" class="text-danger"></span>
                                        </div>
                                    </div>
                                </div>
                                <div class="py-2">
                                    <input asp-for="Input.Email" class="form-control" placeholder="E-mail" />
                                    <span asp-validation-for="Input.Email" class="text-danger"></span>
                                </div>
                                <div class="py-2">
                                    <input asp-for="Input.PhoneNumber" class="form-control" placeholder="Phone Number" />
                                    <span asp-validation-for="Input.PhoneNumber" class="text-danger"></span>
                                </div>
                                <div class="py-2">
                                    <button type="submit" class="btn btn-success form-control">Register</button>
                                </div>
                                <hr />
                                <p>
                                    By clicking <em>Register</em> you agree to our <a asp-page="/Privacy" target="_blank">terms of service</a>
                                </p>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
